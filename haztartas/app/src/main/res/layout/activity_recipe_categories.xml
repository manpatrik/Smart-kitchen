<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recipe.RecipeCategoriesActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/soupButton"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:drawableLeft="@drawable/icons_soup"
            android:text="@string/soup"
            android:backgroundTint="@color/pantryItemBlue"
            android:textSize="30sp"
            android:onClick="clickSoupButton"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/mainFoodButton"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="@color/pantryItemBlue"
            android:textSize="30sp"
            android:text="@string/mainFood"
            android:drawableLeft="@drawable/icons_main_food"
            android:onClick="clickMainFoodButton"
            tools:ignore="RtlHardcoded"/>

        <Button
            android:id="@+id/dessertButton"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:backgroundTint="@color/pantryItemBlue"
            android:textSize="25sp"
            android:text="@string/dessert"
            android:drawableLeft="@drawable/icons_dessert"
            android:onClick="clickDessertButton"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>